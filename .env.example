# AI API Keys (Required for production)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Newsletter Configuration
NEWSLETTER_TITLE=Geopolitical Daily
NEWSLETTER_AUTHOR=Your Name
NEWSLETTER_FROM_EMAIL=your-email@example.com

# Site Configuration
SITE_BASE_URL=https://elh0m3r0.github.io/geodaily

# AI Configuration
AI_PROVIDER=anthropic  # anthropic or gemini
AI_MODEL=claude-3-haiku-20240307  # Use cheaper model by default
AI_MAX_TOKENS=8000  # Increased for comprehensive analysis
AI_TEMPERATURE=0.3
AI_MAX_COST_PER_DAY=2.0  # $2/day limit

# Scraping Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2
USER_AGENT=Mozilla/5.0 (compatible; GeopoliticalDaily/1.0)

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Notification Configuration (Optional)
ADMIN_EMAIL=admin@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=your-smtp-from-email@example.com
SMTP_USE_TLS=true

# Development/Testing
DEBUG=false
DRY_RUN=false  # Set to true to skip actual publishing

# Cleanup Configuration
CLEANUP_ENABLED=true
LOG_RETENTION_DAYS=30
NEWSLETTER_RETENTION_DAYS=90
OUTPUT_RETENTION_DAYS=7
METRICS_RETENTION_DAYS=180
CLEANUP_DRY_RUN=false

# Optional: GitHub token for enhanced rate limits
GITHUB_TOKEN=your_github_token_here
